      <div class="col-sm-5">
        <#%= f.check_box :caja, class:'form-control'%>
      </div>
    </div>
  </div>
  
  <div class="field">
    <div class="form-group">
    <#%= f.label :contador,class: 'col-sm-1 control-label'%>
      <div class="col-sm-5">
        <#%= f.check_box :contador, class:'form-control'%>
      </div>
    </div>
  </div>
