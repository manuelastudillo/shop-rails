       <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :telefono, "Telefono" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :telefono, placeholder: "Telefono", class: "form-control", required: true  %>
          </div>
        </div>

       <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :Ingreso, "Ingreso" %>
          </div>
          <div class="col-xs-10">
            <%= f.date_select :fechaingreso,  class: "form-control" %>
          </div>
        </div>


        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :sueldo, "Sueldo" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :sueldo, placeholder: "Sueldo", class: "form-control", required: true  %>
          </div>
        </div>


               <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :Admin, "Admin" %>
          </div>
          <div class="col-xs-10">
            <%= hidden_field_tag :admin, '0',  class: "form-control"  %>
            <%= f.check_box :admin, {checked: false}%>
          </div>
        </div>



