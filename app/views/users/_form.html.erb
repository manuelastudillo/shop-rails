
<div class="container-fluid">
  <div class="row">
    <div class="panel-body">
<%= form_for @user do |f| %>
  <%= render 'shared/errors', object: @user %>
        
        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :nombre, "Nombre" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :nombre, autofocus: true, placeholder: "Nombre", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :apellido, "Apellido" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :apellido, placeholder: "Apellido", class: "form-control", required: true  %>
          </div>
        </div>

       <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :rut, "Rut" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :rut, placeholder: "Rut", class: "form-control", required: true  %>
          </div>
        </div>

       <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :email, "Email" %>
          </div>
          <div class="col-xs-10">
            <%= f.email_field :email, placeholder: "Email", class: 'form-control', required: true %>
          </div>
        </div>

       <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :password, "Contraseña" %>
          </div>
          <div class="col-xs-10">
            <%= f.password_field :password, placeholder: "Contraseña", class: 'form-control', required: true %>
          </div>
        </div>

       <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :password_confirmation, "Confirme Contraseña" %>
          </div>
          <div class="col-xs-10">
            <%= f.password_field :password_confirmation, placeholder: "Confirme Contraseña", class: 'form-control', required: true %>
          </div>
        </div>

    <!--
