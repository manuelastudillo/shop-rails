   <div class="field">
    <div class="form-group">
    <%= f.label :vendedor, { class: 'col-sm-1 control-label', :style => 'visibility: hidden'} %>
      <div class="col-sm-5">
        <%= hidden_field_tag :vendedor, '0' %>
        <%= f.check_box :vendedor, {checked: true, :style => 'visibility: hidden'}%>
      </div>
    </div>


        <%= f.submit "Aceptar", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>

