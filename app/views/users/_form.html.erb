
<div class="container-fluid">
  <div class="row">
    <div class="panel-body">
<%= form_for @user do |f| %>
  <%= render 'shared/errors', object: @user %>
        
  <div class="form-group">
    <%= f.label :nombre %>
    <%= f.text_field :nombre, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'form-control', required: true %>
  </div>

   <div class="field">
    <div class="form-group">
    <%= f.label :vendedor, { class: 'col-sm-1 control-label'} %>
      <div class="col-sm-5">
        <%= hidden_field_tag :vendedor, '0' %>
        <%= f.check_box :vendedor, {checked: true}%>
      </div>
    </div>


  
   <div class="field">
    <div class="form-group">
    <%= f.label :admin, { class: 'col-sm-1 control-label'} %>
      <div class="col-sm-5">
        <%= hidden_field_tag :admin, '0' %>
        <%= f.check_box :admin, {checked: true}%>
      </div>
    </div>
