<div class="container-fluid">
  <div class="row">
    <div class="panel-body">
      <%= form_for(brand) do |f| %>
        <% if brand.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(brand.errors.count, "error") %> prohibited this brand from being saved:</h2>

            <ul>
            <% brand.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :name, "Nombre" %>
          </div>
          <div class="col-xs-10">
            <%= f.number_field :name, placeholder: "Nombre", class: "form-control" %>
          </div>
        </div>

                <%= f.submit "Aceptar", class: "btn btn-success" %>
         <%= link_to 'Atras', brands_url,:class =>"btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>
